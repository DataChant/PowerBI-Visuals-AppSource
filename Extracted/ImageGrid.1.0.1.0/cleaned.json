                        "ImageURL": {
                            "max": 1
                        },
                        "ImageURLHQ": {
                            "max": 1
                        }
                    }
                ],
                "table": {
                    "rows": {
                        "select": [
                            {
                                "for": {
                                    "in": "Value"
                                }
                            },
                            {
                                "for": {
                                    "in": "ImageURL"
                                }
                            },
                            {
                                "for": {
                                    "in": "ImageURLHQ"
                                }
                            }
                        ]
                    }
                }
            }
        ],
        "sorting": {
            "default": {}
        },
        "objects": {
