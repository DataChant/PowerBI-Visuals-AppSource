                        "displayName": "Minimum width for higher quality images",
                        "type": {
                            "numeric": true
                        }
                    },
                    "pTopListWeight": {
                        "displayName": "Top list weight (for circle top list)",
                        "type": {
                            "numeric": true
                        }
                    },
                    "pRenderType": {
                        "displayName": "Render type",
                        "type": {
                            "enumeration": [
                                {
                                    "value": "CIRCLETOPLIST",
                                    "displayName": "Top list circles"
                                },
                                {
                                    "value": "CIRCLE",
                                    "displayName": "Weighted circles"
                                },
                                {
