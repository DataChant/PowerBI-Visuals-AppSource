{
    "visual": {
        "name": "filterBar",
        "displayName": "Filter Bar | Viz Data Ltd",
        "guid": "filterbar_vizdataltd",
        "visualClassName": "FilterBar",
        "version": "1.0.0.7",
        "description": "Visual filters with heatmap colouring, informing your users as they filter",
        "supportUrl": "https://vizdata.co.uk/#/powerbi/filter-bar",
        "gitHubUrl": "https://github.com/VizDataLtd/filters"
    },
    "author": {
        "name": "Emma Saunders",
        "email": "emma@vizdata.co.uk"
    },
    "apiVersion": "5.3.0",
    "style": "style/visual.less",
    "stringResources": {},
    "capabilities": {
        "dataRoles": [
            {
                "displayName": "Category (mandatory)",
                "name": "category",
                "kind": "Grouping",
                "description": "Series by which you wish to group data"
            },
            {
                "displayName": "Size By (optional)",
                "name": "sizeBy",
                "kind": "Measure",
                "description": "If your rectangles should be sized by data, provide a number series here."
            },
            {
                "displayName": "Sort By (optional)",
                "name": "sortBy",
                "kind": "Measure",
                "description": "If you wish to sort the categories by a custom order (other than by Category or Color by Data), provide a series here and then use the visual ellipsis to select Sort Axis."
            },
            {
                "displayName": "Color by data (optional)",
                "name": "measure",
                "kind": "Measure",
                "description": "If Color by Data is 'on' in formatting pane, you must provide Color by Data series in the data pane to drive rectangle colour."
            }
        ],
        "objects": {
            "general": {
                "properties": {
                    "formatString": {
                        "type": {
                            "formatting": {
                                "formatString": true
                            }
                        }
                    },
                    "selection": {
                        "displayName": "Selection",
                        "type": {
                            "text": true
                        }
                    }
                }
            },
            "fontCard": {
                "properties": {
                    "fontFamily": {
                        "type": {
                            "formatting": {
                                "fontFamily": true
                            }
                        }
                    },
                    "fontSize": {
                        "type": {
                            "formatting": {
                                "fontSize": true
                            }
                        }
                    },
                    "bold": {
                        "type": {
                            "bool": true
                        }
                    },
                    "italic": {
                        "type": {
                            "bool": true
                        }
                    },
                    "underline": {
                        "type": {
                            "bool": true
                        }
                    },
                    "labelFontColorSlice": {
                        "displayName": "Font Color",
                        "type": {
                            "fill": {
                                "solid": {
                                    "color": true
                                }
                            }
                        }
                    },
                    "labelToggleSlice": {
                        "type": {
                            "bool": true
                        }
                    }
                }
            },
            "interpolateCard": {
                "properties": {
                    "startColorSlice": {
                        "displayName": "Start Color",
                        "type": {
                            "fill": {
                                "solid": {
                                    "color": true
                                }
                            }
                        }
                    },
                    "endColorSlice": {
                        "displayName": "End Color",
                        "type": {
                            "fill": {
                                "solid": {
                                    "color": true
                                }
                            }
                        }
                    },
                    "interpolationToggleSlice": {
                        "type": {
                            "bool": true
                        }
                    }
                }
            },
            "dataColorCard": {
                "properties": {
                    "highColorSlice": {
                        "displayName": "High Color",
                        "type": {
                            "fill": {
                                "solid": {
                                    "color": true
                                }
                            }
                        }
                    },
                    "mediumColorSlice": {
                        "displayName": "Medium Color",
                        "type": {
                            "fill": {
                                "solid": {
                                    "color": true
                                }
                            }
                        }
                    },
                    "lowColorSlice": {
                        "displayName": "Low Color",
                        "type": {
                            "fill": {
                                "solid": {
                                    "color": true
                                }
                            }
                        }
                    },
                    "highValueSlice": {
                        "type": {
                            "numeric": true
                        },
                        "description": "High value"
                    },
                    "mediumValueSlice": {
                        "type": {
                            "numeric": true
                        },
                        "description": "Medium value"
                    },
                    "lowValueSlice": {
                        "type": {
                            "numeric": true
                        },
                        "description": "Low value"
                    },
                    "colorByDataToggleSlice": {
                        "type": {
                            "bool": true
                        }
                    }
                }
            },
            "overrideCard": {
                "properties": {
                    "arrowInputSlice": {
                        "type": {
                            "text": true
                        },
                        "description": "Provide the labels for the rectangles you want, separating with semi-colons."
                    },
                    "manualToggleSlice": {
                        "type": {
                            "bool": true
                        }
                    }
                }
            },
            "arrowCard": {
                "properties": {
                    "strokeColorSlice": {
                        "type": {
                            "fill": {
                                "solid": {
                                    "color": true
                                }
                            }
                        },
                        "description": "Color of rectangle border"
                    },
                    "strokeWidthSlice": {
                        "type": {
                            "integer": true
                        },
                        "description": "Thickness of rectangle border (0-10px)"
                    },
                    "arrowGapSlice": {
                        "type": {
                            "integer": true
                        },
                        "description": "Gap between rectangles (0-25px)"
                    }
                }
            }
        },
        "dataViewMappings": [
            {
                "conditions": [
                    {
                        "category": {
                            "max": 1
                        },
                        "measure": {
                            "max": 1
                        },
                        "sortBy": {
                            "max": 1
                        },
                        "sizeBy": {
                            "max": 1
                        }
                    }
                ],
                "categorical": {
                    "categories": {
                        "select": [
                            {
                                "bind": {
                                    "to": "category"
                                }
                            }
                        ]
                    },
                    "values": {
                        "select": [
                            {
                                "bind": {
                                    "to": "measure"
                                }
                            },
                            {
                                "bind": {
                                    "to": "sortBy"
                                }
                            },
                            {
                                "bind": {
                                    "to": "sizeBy"
                                }
                            }
                        ]
                    }
                }
            }
        ],
        "privileges": [],
        "supportsKeyboardFocus": true,
        "supportsLandingPage": true,
        "supportsEmptyDataView": true,
        "supportsHighlight": true,
        "sorting": {
            "default": {}
        },
        "tooltips": {
            "supportedTypes": {
                "default": true,
                "canvas": true
            },
            "supportEnhancedTooltips": true,
            "roles": [
                "tooltips"
            ]
        }
    },
