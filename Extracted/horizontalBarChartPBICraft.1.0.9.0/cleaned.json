{
    "visual": {
        "name": "Horizontal Bar Chart",
        "displayName": "Horizontal Bar Chart",
        "guid": "horizontalBarChartPBICraft",
        "visualClassName": "Visual",
        "version": "1.0.9.0",
        "description": "A horizontal bar chart that saves space by putting the category labels inside the bars",
        "supportUrl": "support@pbicraft.com",
        "gitHubUrl": ""
    },
    "author": {
        "name": "pbicraft",
        "email": "support@pbicraft.com"
    },
    "apiVersion": "5.8.0",
    "style": "style/visual.less",
    "stringResources": {},
    "capabilities": {
        "dataRoles": [
            {
                "displayName": "Category",
                "name": "category",
                "kind": "Grouping"
            },
            {
                "displayName": "Measure",
                "name": "measure",
                "kind": "Measure"
            },
            {
                "displayName": "Overlap Values",
                "name": "overlapValues",
                "kind": "Measure"
            },
            {
                "displayName": "Tooltip",
                "name": "tooltip",
                "kind": "Measure"
            }
        ],
        "drilldown": {
            "roles": [
                "category"
            ]
        },
        "sorting": {
            "default": {}
        },
        "tooltips": {
            "supportedTypes": {
                "default": true,
                "canvas": true
            },
            "roles": [
                "tooltips"
            ]
        },
        "dataViewMappings": [
            {
                "conditions": [
                    {
                        "category": {
                            "max": 1
                        },
                        "measure": {
                            "max": 1
                        },
                        "overlapValues": {
                            "max": 1
                        },
                        "tooltip": {
                            "max": 4
                        }
                    }
                ],
                "categorical": {
                    "categories": {
                        "for": {
                            "in": "category"
                        }
                    },
                    "values": {
                        "select": [
                            {
                                "bind": {
                                    "to": "measure"
                                }
                            },
                            {
                                "bind": {
                                    "to": "tooltip"
                                }
                            },
                            {
                                "bind": {
                                    "to": "overlapValues"
                                }
                            }
                        ]
                    }
                }
            }
        ],
        "objects": {
            "bars": {
                "displayName": "Bar Settings",
                "properties": {
                    "defaultColor": {
                        "displayName": "Default Color",
                        "type": {
                            "fill": {
                                "solid": {
                                    "color": true
                                }
                            }
                        }
                    },
                    "overlapColor": {
                        "displayName": "Overlap Bars Color",
                        "type": {
                            "fill": {
                                "solid": {
                                    "color": true
                                }
                            }
                        }
                    },
                    "barOpacity": {
                        "displayName": "Opacity",
                        "type": {
                            "integer": true
                        }
                    },
                    "barHeight": {
                        "displayName": "Bar Height",
                        "type": {
                            "integer": true
                        }
                    },
                    "textColor": {
                        "displayName": "Text Color",
                        "type": {
                            "fill": {
                                "solid": {
                                    "color": true
                                }
                            }
                        }
                    },
                    "fontSize": {
                        "displayName": "Font Size",
                        "type": {
                            "formatting": {
                                "fontSize": true
                            }
                        }
                    }
                }
            },
            "barShape": {
                "displayName": "Bar Shape",
                "properties": {
                    "shape": {
                        "displayName": "Shape",
                        "type": {
                            "enumeration": [
                                {
                                    "displayName": "Bar",
                                    "value": "Bar"
                                },
                                {
                                    "displayName": "Line",
                                    "value": "Line"
                                },
                                {
                                    "displayName": "Lollipop",
                                    "value": "Lollipop"
                                },
                                {
                                    "displayName": "Hammer Head",
                                    "value": "Hammer Head"
                                }
                            ]
                        }
                    },
                    "labelPosition": {
                        "displayName": "Label Posistion",
                        "type": {
                            "enumeration": [
                                {
                                    "displayName": "Side",
                                    "value": "Side"
                                },
                                {
                                    "displayName": "Top",
                                    "value": "Top"
                                }
                            ]
                        }
                    },
                    "headColor": {
                        "displayName": "Head",
                        "type": {
                            "fill": {
                                "solid": {
                                    "color": true
                                }
                            }
                        }
                    }
                }
            },
            "labels": {
                "displayName": "Labels",
                "properties": {
                    "show": {
                        "displayName": "Show",
                        "type": {
                            "bool": true
                        }
                    },
                    "textColor": {
                        "displayName": "Text Color",
                        "type": {
                            "fill": {
                                "solid": {
                                    "color": true
                                }
                            }
                        }
                    },
                    "highlightColor": {
                        "displayName": "Highlight Color",
                        "type": {
                            "fill": {
                                "solid": {
                                    "color": true
                                }
                            }
                        }
                    },
                    "fontSize": {
                        "displayName": "Font Size",
                        "type": {
                            "formatting": {
                                "fontSize": true
                            }
                        }
                    },
                    "alignment": {
                        "displayName": "Alignment",
                        "type": {
                            "enumeration": [
                                {
                                    "displayName": "Left",
                                    "value": "left"
                                },
                                {
                                    "displayName": "ight",
                                    "value": "left"
                                }
                            ]
                        }
                    }
                }
            },
            "license": {
                "displayName": "License",
                "properties": {
                    "plans": {
                        "displayName": "Plans",
                        "type": {
                            "text": true
                        }
                    },
                    "licenseKey": {
                        "displayName": "License Key",
                        "type": {
                            "text": true
                        }
                    }
                }
            }
        },
        "privileges": [
            {
                "name": "LocalStorage",
                "essential": false
            }
        ],
        "supportsHighlight": true,
        "supportsKeyboardFocus": true,
        "supportsMultiVisualSelection": true,
        "supportsSynchronizingFilterState": true,
        "suppressDefaultTitle": true
    },
    "visualEntryPoint": "",
    "externalJS": [],
    "assets": {
        "icon": "assets/icon.png"
    }
}